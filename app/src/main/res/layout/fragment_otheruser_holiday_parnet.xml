<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="#049CA3">
    <android.support.v7.widget.CardView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context="com.example.zhangbolun.jinjidebishe.otheruser.holiday.OtheruserHolidayParnetFragment">

            <!--红色#D22900 绿色#01932D-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="今日假条"
                    android:textSize="24sp"
                    android:layout_weight="7"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/triangle_24"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/fragment_otheruser_holiday_parent_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="24sp"/>
                <TextView
                    android:id="@+id/fragment_otheruser_holiday_parent_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:lines="3"/>
                <TextView
                    android:id="@+id/fragment_otheruser_holiday_parent_posttime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"/>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <Button
                        android:id="@+id/fragment_otheruser_holiday_parent_agree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="确认孩子请假"/>
                    <Button
                        android:id="@+id/fragment_otheruser_holiday_parent_refuse"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="拒绝孩子请假"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/fragment_otheruser_holiday_parent_oldday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_otheruser_holiday_parent_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="往日假条"
                    android:textSize="24sp"
                    android:layout_weight="7"/>

                <ImageButton
                    android:id="@+id/fragment_otheruser_holiday_parent_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/triangle_24"
                    android:layout_weight="1"/>
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_otheruser_holiday_parent_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>