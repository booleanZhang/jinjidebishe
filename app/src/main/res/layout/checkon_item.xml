<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/checkon_item_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true" />
        <EditText
            android:id="@+id/checkon_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/checkon_item_id"
            android:layout_alignTop="@id/checkon_item_id"/>
        <EditText
            android:id="@+id/checkon_item_absence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkon_item_id"/>
        <EditText
            android:id="@+id/checkon_item_intime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkon_item_absence"/>
        <EditText
            android:id="@+id/checkon_item_outtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@id/checkon_item_intime"/>
        <EditText
            android:id="@+id/checkon_item_reason"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/checkon_item_intime"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>