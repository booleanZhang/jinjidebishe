<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangbolun.jinjidebishe.teacher.holiday.TeacherHolidayFragment">
    <android.support.v7.widget.Toolbar
        android:id="@+id/fragment_teacher_holiday_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <com.ashokvarma.bottomnavigation.BottomNavigationBar
        android:id="@+id/fragment_teacher_holiday_bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>


    <FrameLayout
        android:id="@+id/fragment_teacher_holiday_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/fragment_teacher_holiday_toolbar"
        android:layout_above="@id/fragment_teacher_holiday_bottombar"
        android:background="#C1C3C4"/>

</RelativeLayout>
