<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    app:cardCornerRadius="4dp">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/activity_dynamic_school_item_circleImageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/iconmonstr_user_6_48"/>
        <TextView
            android:id="@+id/activity_dynamic_school_item_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textSize="17sp"
            android:gravity="center_vertical|start"
            android:layout_toRightOf="@id/activity_dynamic_school_item_circleImageView"/>
        <TextView
            android:id="@+id/activity_dynamic_school_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_dynamic_school_item_circleImageView"
            android:textSize="20sp"/>
        <ImageView
            android:id="@+id/activity_dynamic_school_item_imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_dynamic_school_item_content" />
        <RelativeLayout
            android:orientation="horizontal"
            android:id="@+id/activity_dynamic_school_item_linearlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_dynamic_school_item_imageView">
            <TextView
                android:id="@+id/activity_dynamic_school_item_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>
            <TextView
                android:id="@+id/activity_dynamic_school_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/activity_dynamic_school_item_date"/>
            <ImageView
                android:id="@+id/activity_dynamic_school_item_comments"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_speaker_notes_black_24dp"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
    </RelativeLayout>
</android.support.v7.widget.CardView>